{
  "private": true,
  "name": "blocket-game",
  "version": "0.0.1",
  "description": "A Reddit-based room design game built on Devvit",
  "type": "module",
  "license": "BSD-3-Clause",
  "scripts": {
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "build": "npm run build:client && npm run build:server",
    "deploy": "npm run build && devvit upload",
    "dev": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:devvit": "devvit playtest blocket_test",
    "dev:server": "cd src/server && vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@devvit/web": "0.12.3",
    "clsx": "2.1.1",
    "devvit": "0.12.3",
    "express": "5.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@tailwindcss/vite": "4.1.6",
    "@types/express": "5.0.1",
    "@types/node": "^20.0.0",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "@vitejs/plugin-react": "4.4.1",
    "concurrently": "9.1.2",
    "eslint": "9.23.0",
    "fast-check": "^3.15.0",
    "prettier": "3.5.3",
    "tailwindcss": "4.1.6",
    "typescript": "5.8.2",
    "vite": "6.2.4",
    "vitest": "3.1.1"
  }
}